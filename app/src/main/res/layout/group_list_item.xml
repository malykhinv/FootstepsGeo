<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_vertical">

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="@dimen/size_userpic"
        android:layout_height="@dimen/size_userpic"
        android:layout_weight="0"
        app:srcCompat="@drawable/userpic_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_horizontal_small"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/podkova"
            android:text="username"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageUserpic"
            app:layout_constraintTop_toTopOf="@+id/imageUserpic" />

        <TextView
            android:id="@+id/text_user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_xsmall"
            android:fontFamily="@font/podkova"
            android:text="address"
            android:textColor="@color/grey_59"
            android:textSize="@dimen/text_size_regular" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_divider"
            android:layout_marginTop="@dimen/margin_vertical"
            android:background="@color/grey_f6" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonFriendOptions"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:layout_gravity="center_vertical|end"
        android:layout_marginBottom="@dimen/margin_vertical_small"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contextClickable="false"
        android:focusable="true"
        android:scaleType="centerInside"
        android:src="@drawable/image_menu"
        app:tint="@color/grey_59" />

</LinearLayout>
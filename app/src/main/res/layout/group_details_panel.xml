<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDetailsPanel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_panel"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/height_panel_peek"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:layout_insetEdge="bottom">

    <LinearLayout
        android:id="@+id/layoutPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/viewMover"
            android:layout_width="@dimen/width_mover"
            android:layout_height="@dimen/height_mover"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_marginBottom="@dimen/margin_vertical_small"
            android:alpha="0.2"
            android:background="@drawable/mover_background" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/lower_panel_background">

            <ImageView
                android:id="@+id/imageUserpic"
                android:layout_width="@dimen/width_userpic"
                android:layout_height="@dimen/height_userpic"
                android:layout_marginStart="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/margin_vertical"
                android:background="@drawable/userpic_background"
                android:padding="@dimen/padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/image_user_fortuneteller"
                app:tint="@color/blue" />

            <TextView
                android:id="@+id/textUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_horizontal_small"
                android:fontFamily="@font/podkova"
                android:text="Саймон Котик"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_regular"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageUserpic"
                app:layout_constraintTop_toTopOf="@+id/imageUserpic" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUserInfoDistance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_label"
                android:layout_marginStart="@dimen/margin_horizontal_small"
                android:background="@drawable/user_info_background"
                android:paddingStart="@dimen/padding_horizontal_small"
                android:paddingEnd="@dimen/padding_horizontal_small"
                app:layout_constraintBottom_toBottomOf="@+id/imageUserpic"
                app:layout_constraintStart_toEndOf="@+id/imageUserpic">

                <ImageView
                    android:id="@+id/imageUserInfoDistance"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/image_distance"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/textUserInfoDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_xxsmall"
                    android:fontFamily="@font/podkova"
                    android:text="0.8 км"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageUserInfoDistance"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUserInfoBattery"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_label"
                android:layout_marginStart="@dimen/margin_horizontal_small"
                android:background="@drawable/user_info_background"
                android:paddingLeft="@dimen/padding_horizontal_small"
                android:paddingEnd="@dimen/padding_horizontal_small"
                app:layout_constraintBottom_toBottomOf="@+id/imageUserpic"
                app:layout_constraintStart_toEndOf="@+id/layoutUserInfoDistance">

                <ImageView
                    android:id="@+id/imageUserInfoBattery"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/image_battery"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/textUserInfoBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_xxsmall"
                    android:fontFamily="@font/podkova"
                    android:text="41%"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageUserInfoBattery"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUserInfoTime"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_label"
                android:layout_marginStart="@dimen/margin_horizontal_small"
                android:background="@drawable/user_info_background"
                android:paddingStart="@dimen/padding_horizontal_small"
                android:paddingEnd="@dimen/padding_horizontal_small"
                app:layout_constraintBottom_toBottomOf="@+id/imageUserpic"
                app:layout_constraintStart_toEndOf="@+id/layoutUserInfoBattery">

                <ImageView
                    android:id="@+id/imageUserInfoTime"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/image_time"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/textUserInfoTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_xxsmall"
                    android:fontFamily="@font/podkova"
                    android:text="Сейчас"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageUserInfoTime"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layoutActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageUserpic">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutGetRoute"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_selector"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/imageGetRoute"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textGetRoute"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image_getroute"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/textGetRoute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/podkova"
                        android:text="@string/get_route"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutCall"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_selector"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/imageCall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="9dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textCall"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image_call"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/textCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/podkova"
                        android:text="@string/call"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>